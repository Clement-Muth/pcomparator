{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "off",
        "noChildrenProp": "off",
        "noUnusedImports": "error",
        "recommended": true
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "noCommaOperator": "off",
        "recommended": true
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "recommended": true,
        "noShadowRestrictedNames": "off",
        "noExplicitAny": "off",
        "noDuplicateTestHooks": "off",
        "noArrayIndexKey": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "build/*",
      ".vercel",
      "node_modules",
      ".next",
      "public/*.js",
      "amplify",
      "src/infrastructures/api/*",
      "src/aws-exports.js",
      "cypress/plugins/*.json",
      "en.ts",
      "fr.ts"
    ],
    "include": [".storybook", "src/*"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 110,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "always"
    }
  }
}
